<!DOCTYPE html>
<html lang="es">

<head>
    <title></title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="{{ base_url() }}css/bootstrap.min.css">
</head>

<body>
    <div class="container">
        <div class="row">
            <div class="col-sm-10 col-sm-offset-1">
                <div class="panel panel-primary">
                    <div class="panel-heading">
                        <h3 class="panel-title">Editar Usuario</h3>
                    </div>
                    <div class="panel-body">
                        <form action="{{ base_url() }}index.php/Usuarios/update" method="POST">
                            <input type="hidden" name="id" value="{{ usuario.idUsuarios }}">
                            <div class="row">
                                <div class="col-sm-6">
                                    <label for="">Nombre(s): </label>
                                    <input type="text" name="nombres" value="{{ usuario.Nombres }}" class="form-control" required>
                                </div>
                                <div class="col-sm-6">
                                    <label for="">Apellido(s): </label>
                                    <input type="text" name="apellidos" value="{{ usuario.Apellidos }}" class="form-control" required>
                                </div>
                                <div class="col-sm-12">
                                    <label for="">Correo Electr√≥nico: </label>
                                    <input type="email" name="correo" value="{{ usuario.Correo }}" class="form-control" >
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-6">
                                    <label for="">Usuario: </label>
                                    <input type="text" name="usr" value="{{ usuario.UserName }}" class="form-control" required>
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-12">
                                    <button type="submit" class="btn btn-success btn-block">Registrar</button>
                                </div>
                            </div>
                        </form>                       
                    </div>
                </div>
            </div>
        </div>        
    </div>


    <script src="{{ base_url() }}js/jquery-2.2.4.min.js"></script>
    <script src="{{ base_url() }}js/bootstrap.min.js"></script>
</body>
